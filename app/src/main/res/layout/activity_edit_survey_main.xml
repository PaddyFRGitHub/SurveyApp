<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCFF"
    tools:context=".EditSurveyMainActivity">

    <ImageView
            app:srcCompat="@drawable/dmulogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:scaleType="centerCrop"/>

    <Button
            android:id="@+id/btn_cancel2"
            android:layout_width="268dp"
            android:layout_height="45dp"
            android:onClick="goBack2"
            android:text="Cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_next2"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="4dp" />

    <Button
            android:id="@+id/btn_next2"
            android:layout_width="269dp"
            android:layout_height="43dp"
            android:onClick="next2"
            android:text="Next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_startDate2"
            android:layout_marginTop="84dp"
            app:layout_constraintHorizontal_bias="0.507" />

    <TextView
            android:id="@+id/text_endDate2"
            android:layout_width="141dp"
            android:layout_height="67dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="60dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:ems="10"
            android:hint="End Date"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title2"
            android:textAlignment="center"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/text_startDate2"
            android:layout_width="129dp"
            android:layout_height="70dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="132dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:ems="10"
            android:hint="Start Date"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title2"
            android:textAlignment="center"
            android:textStyle="bold" />

    <EditText
            android:id="@+id/text_title2"
            android:layout_width="311dp"
            android:layout_height="53dp"
            android:layout_marginStart="101dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="100dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>