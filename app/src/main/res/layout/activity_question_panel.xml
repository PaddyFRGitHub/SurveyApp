<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCCCFF"
        tools:context=".QuestionPanelActivity">

    <Button
            android:id="@+id/btn_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple_700"
            android:onClick="publish"
            android:text="Publish"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
            android:id="@+id/btn_goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple_700"
            android:onClick="goBack"
            android:text="Go Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
            android:layout_width="397dp"
            android:layout_height="405dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_publish"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.146"
            android:id="@+id/scrollView2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Put all your EditText views inside this LinearLayout -->

            <EditText
                    android:id="@+id/text_question"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 1"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <EditText
                    android:id="@+id/text_question2"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="2"
                    android:hint="Question 2"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question" />

            <EditText
                    android:id="@+id/text_question3"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 3"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question2" />

            <EditText
                    android:id="@+id/text_question4"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 4"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question3" />

            <EditText
                    android:id="@+id/text_question5"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 5"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question4" />

            <EditText
                    android:id="@+id/text_question6"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 6"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question5" />

            <EditText
                    android:id="@+id/text_question7"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 7"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question6" />

            <EditText
                    android:id="@+id/text_question8"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 8"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question7" />

            <EditText
                    android:id="@+id/text_question9"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 9"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question8" />

            <EditText
                    android:id="@+id/text_question10"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_700"
                    android:ems="10"
                    android:hint="Question 10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_question9" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>