<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCFF"
    tools:context=".SurveyResultsActivity">

    <ImageView
            app:srcCompat="@drawable/dmulogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:scaleType="centerCrop"/>

    <Button
            android:id="@+id/btn_editBack"
            android:layout_width="268dp"
            android:layout_height="44dp"
            android:backgroundTint="@color/purple_700"
            android:onClick="goBack"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3"
            app:layout_constraintVertical_bias="0.128"
            android:fontFamily="sans-serif-condensed-medium" />

    <Button
            android:id="@+id/btn_edit"
            android:layout_width="272dp"
            android:layout_height="51dp"
            android:backgroundTint="@color/purple_700"
            android:onClick="edit"
            android:text="Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_deletesurvey"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.0"
            android:fontFamily="sans-serif-condensed-medium" />

    <TextView
            android:id="@+id/text_editTitle"
            android:layout_width="395dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="Title\n"
            android:inputType="textPersonName"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-medium" />

    <Button
            android:id="@+id/btn_deletesurvey"
            android:layout_width="265dp"
            android:layout_height="46dp"
            android:backgroundTint="@color/purple_700"
            android:onClick="delete"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_editBack"
            app:layout_constraintVertical_bias="0.0"
            android:fontFamily="sans-serif-condensed-medium" />

    <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neither"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.268" />

    <TextView
            android:id="@+id/textView10"
            android:layout_width="58dp"
            android:layout_height="39dp"
            android:text="Strongly Agree"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.255" />

    <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disagree"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.268" />

    <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.385"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="64dp"
        android:layout_height="35dp"
        android:text="Strongly Disagree"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <ScrollView
            android:layout_width="396dp"
            android:layout_height="227dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/text_editTitle"
            android:layout_marginTop="112dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/scrollView3"
            app:layout_constraintHorizontal_bias="1.0">

        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="388dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

            <ListView
                    android:id="@+id/resultListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>